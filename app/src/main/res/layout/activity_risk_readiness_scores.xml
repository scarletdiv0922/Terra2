<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/terrabg3">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/back_button"
        android:src="@drawable/ic_back_dark"
        android:scaleType="fitCenter"
        android:background="@color/white_transparent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/montserrat"
        android:text="Your Scores"
        android:textColor="@color/darkGreen"
        android:textSize="40sp"
        android:textStyle="bold" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:fab_colorNormal="@color/midGreen"
        app:fab_colorPressed="@color/darkGreen"
        app:fab_icon="@drawable/ic_home" />

    <com.alan.alansdk.button.AlanButton
        android:id="@+id/alan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/home_button"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/textViewCounty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/darkGreen"
        android:textSize="18sp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:layout_below="@id/score"
        android:text="Please enter name of your county below." />

    <EditText
        android:id="@+id/editTextCounty"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:inputType="text"
        android:hint="County name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:layout_below="@+id/textViewCounty"/>

    <Button
        android:id="@+id/show_risk_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextCounty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/lightGreen"
        android:fontFamily="@font/montserrat"
        android:padding="10dp"
        android:text="Show me my Risk Score"
        android:textColor="@color/darkGreen"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/risk_score"
        android:layout_below="@id/show_risk_button"
        android:text="Your Risk Score:"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/darkGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/risk_score_blurb"
        android:layout_below="@id/risk_score"
        android:text="@string/risk_score_blurb"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/darkGreen"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/readiness_score"
        android:layout_below="@id/risk_score_blurb"
        android:text="Your Readiness Score:"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/darkGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/readiness_score_blurb"
        android:layout_below="@id/readiness_score"
        android:text="@string/readiness_score_blurb"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/darkGreen"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>